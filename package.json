{
  "name": "shri-ci-server",
  "version": "1.0.0",
  "description": "CI сервер, который работает с Git репозиторием",
  "main": "dist/server/server.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-kosh/shri-ci-server.git"
  },
  "author": "Igor Koshelev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/i-kosh/shri-ci-server/issues"
  },
  "homepage": "https://github.com/i-kosh/shri-ci-server#readme",
  "engines": {
    "node": ">=14",
    "npm": "6"
  },
  "engineStrict": true,
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,scss,json,html,md}": "prettier --write"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server/server.js",
    "dev": "cross-env NODE_ENV=development concurrently \"nodemon\" \"webpack --mode development -c webpack.client.ts -w\"",
    "dev:server": "cross-env NODE_ENV=development nodemon",
    "dev:client": "shx rm -rf dist/static dist/index.html && cross-env NODE_ENV=development webpack --mode development -c webpack.client.ts -w",
    "build": "shx rm -rf dist && npm run build:client && npm run build:server",
    "build:server": "shx rm -rf dist/server && tsc --build tsconfig.server.json",
    "build:client": "shx rm -rf dist/static dist/index.html && webpack --progress --mode production -c webpack.client.ts",
    "lint": "eslint src/**/*.{ts,tsx} && stylelint src/client/**/*.{css,scss}",
    "test": "npm run lint && tsc --pretty --noEmit --project tsconfig.json && tsc --pretty --noEmit --project tsconfig.server.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "async": "^3.2.0",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "express-slow-down": "^1.4.0",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "ansi-to-html": "^0.6.15",
    "classnames": "^2.3.1",
    "formik": "^2.2.9",
    "modern-normalize": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@svgr/webpack": "^5.5.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/async": "^3.2.6",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-rate-limit": "^5.1.2",
    "@types/express-slow-down": "^1.3.0",
    "@types/mini-css-extract-plugin": "^1.4.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.17.3",
    "@types/postcss-preset-env": "^6.7.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.1",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "shx": "^0.3.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  }
}
