{
  "name": "shri-ci-server",
  "version": "1.0.0",
  "description": "CI сервер, который работает с Git репозиторием",
  "main": "dist/server.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-kosh/shri-ci-server.git"
  },
  "author": "Igor Koshelev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/i-kosh/shri-ci-server/issues"
  },
  "homepage": "https://github.com/i-kosh/shri-ci-server#readme",
  "engines": {
    "node": "14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "shx rm -rf dist && tsc --build tsconfig.prod.json",
    "lint": "eslint src/**/*.{js,ts}",
    "test": "tsc --pretty --noEmit --project tsconfig.prod.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.17.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "shx": "^0.3.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  }
}
